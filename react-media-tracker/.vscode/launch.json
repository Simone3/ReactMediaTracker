	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Android",
			"cwd": "${workspaceFolder}",
			"type": "reactnative",
			"request": "launch",
			"platform": "android",
			"preLaunchTask": "Copy Firebase Dev",
			"env": {
				"ENVFILE": ".env"
			}
		}, 
		{
			"name": "Debug iOS",
			"cwd": "${workspaceFolder}",
			"type": "reactnative",
			"request": "launch",
			"platform": "ios",
			"preLaunchTask": "Copy Firebase Dev",
			"env": {
				"ENVFILE": ".env"
			}
		}, 
		{
			"name": "Debug iOS iPad",
			"cwd": "${workspaceFolder}",
			"type": "reactnative",
			"request": "launch",
			"platform": "ios",
			"target": "iPad (7th generation)",
			"preLaunchTask": "Copy Firebase Dev",
			"env": {
				"ENVFILE": ".env"
			}
		}
	]
}