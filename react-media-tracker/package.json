{
  "name": "react-media-tracker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android-dev": "npm run setup-env-android-dev && react-native run-android",
    "android-prod": "npm run setup-env-android-prod && react-native run-android --variant=release",
    "ios-dev": "npm run setup-env-ios-dev; react-native run-ios",
    "ios-dev-ipad": "npm run setup-env-ios-dev; react-native run-ios --simulator \"iPad (7th generation)\"",
    "ios-prod": "npm run setup-env-ios-prod; react-native run-ios --device --configuration Release",
    "setup-env-android-dev": "npm run echo-env-dev && npm run cp-firebase-android-dev",
    "setup-env-android-prod": "npm run echo-env-prod && npm run cp-firebase-android-prod",
    "setup-env-ios-dev": "npm run echo-env-dev; npm run cp-firebase-ios-dev",
    "setup-env-ios-prod": "npm run echo-env-prod; npm run cp-firebase-ios-prod",
    "cp-firebase-android-dev": "shx cp \"./app/config/files/config-dev/google-services.json\" \"./android/app/\"",
    "cp-firebase-android-prod": "shx cp \"./app/config/files/config-prod/google-services.json\" \"./android/app/\"",
    "cp-firebase-ios-dev": "shx cp \"./app/config/files/config-dev/GoogleService-Info.plist\" \"./ios/\"",
    "cp-firebase-ios-prod": "shx cp \"./app/config/files/config-prod/GoogleService-Info.plist\" \"./ios/\"",
    "echo-env-dev": "shx echo \"MEDIA_TRACKER_APP_ENV=dev\" > .env",
    "echo-env-prod": "shx echo \"MEDIA_TRACKER_APP_ENV=prod\" > .env",
    "android-clean": "cd android && \"./gradlew\" clean && cd ..",
    "ios-pod": "cd ios; pod install --repo-update; cd ..",
    "reset": "react-native start --reset-cache",
    "lint": "eslint app/**/*.ts app/**/*.tsx"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "~1.13.2",
    "@react-native-community/datetimepicker": "~3.0.8",
    "@react-native-community/masked-view": "~0.1.10",
    "@react-native-firebase/app": "~10.3.0",
    "@react-native-firebase/auth": "~10.3.1",
    "@react-native-picker/picker": "~1.9.8",
    "axios": "~0.21.1",
    "class-transformer": "~0.3.1",
    "class-transformer-validator": "~0.9.1",
    "class-validator": "~0.12.2",
    "date-fns": "~2.16.1",
    "formik": "~2.2.6",
    "i18n-js": "~3.8.0",
    "react": "~16.13.1",
    "react-native": "~0.63.4",
    "react-native-config": "~1.4.1",
    "react-native-document-picker": "~4.2.0",
    "react-native-flash-message": "~0.1.18",
    "react-native-fs": "~2.16.6",
    "react-native-gesture-handler": "~1.9.0",
    "react-native-reanimated": "~1.13.2",
    "react-native-safe-area-context": "~3.1.9",
    "react-native-screens": "~2.16.1",
    "react-navigation": "~4.4.3",
    "react-navigation-drawer": "~2.6.0",
    "react-navigation-stack": "~2.10.2",
    "react-redux": "~7.2.2",
    "redux": "~4.0.5",
    "redux-saga": "~1.1.3",
    "string-strip-html": "~7.0.3",
    "yup": "~0.32.8"
  },
  "devDependencies": {
    "@babel/core": "~7.12.10",
    "@babel/plugin-proposal-decorators": "~7.12.12",
    "@babel/runtime": "~7.12.5",
    "@react-native-community/eslint-config": "~2.0.0",
    "@types/i18n-js": "~3.0.3",
    "@types/jest": "~26.0.19",
    "@types/react": "~17.0.0",
    "@types/react-native": "~0.63.42",
    "@types/react-redux": "~7.1.14",
    "@types/redux": "~3.6.31",
    "@types/string-strip-html": "~5.0.0",
    "@typescript-eslint/eslint-plugin": "~4.11.0",
    "@typescript-eslint/parser": "~4.11.0",
    "babel-jest": "~26.6.3",
    "eslint": "~7.16.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jsdoc": "~30.7.9",
    "eslint-plugin-react": "~7.21.5",
    "jest": "~26.6.3",
    "metro-react-native-babel-preset": "~0.64.0",
    "react-test-renderer": "~16.13.1",
    "reflect-metadata": "~0.1.13",
    "shx": "~0.3.3",
    "typescript": "~4.1.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
